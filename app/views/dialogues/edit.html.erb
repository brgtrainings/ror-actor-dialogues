<h1>Edit Dialogue</h1>

<% if @dialogue.errors.any? %>
<h2>The following errors prevented the dialogue being saved.</h2>

<ul>
  <% @dialogue.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<%= form_with model: @dialogue, local: true do |f| %>
<p>
  <%= f.label :line %>
  <%= f.text_area :line %>
</p>

<%
=begin%>
 <p>
  <%= f.label :actor %>
  <%= f.collection_select :user_id, User.all, :id, :name %>
</p>
<%
=end%>

<p>
  <%= f.label :movie %>
  <%= f.text_field :movie %>
</p>

<p>
  <%= f.label :nonveg %>
  <%= f.check_box :nonveg %>
</p>

<%= f.submit "Update dialogue" %>
<% end %>

<p>
  <%= link_to "Cancel and back to dialogue list", dialogues_path %>
</p>
